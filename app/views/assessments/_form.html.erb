<%= form_for @assessment, html: {class: "form"} do |f| %>
  <%= render 'layouts/errors', :object => @assessment %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :section %>
    <%= f.text_field :section, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :section_number %>
    <%= f.text_field :section_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
<% end %>
